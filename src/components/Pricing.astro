<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const policyDivs = document.querySelectorAll('[data-policy-item]');
    
    policyDivs.forEach(div => {
      const span = div.querySelector('span');
      const tooltip = div.querySelector('[data-tooltip]');
      
      if (span && tooltip) {
        span.addEventListener('click', (e) => {
          e.stopPropagation();
          
          // Cerrar otros tooltips
          document.querySelectorAll('[data-tooltip]').forEach(t => {
            if (t !== tooltip) {
              t.classList.remove('opacity-100');
              t.classList.add('opacity-0');
              t.classList.add('pointer-events-none');
            }
          });
          
          // Toggle el tooltip actual
          tooltip.classList.toggle('opacity-0');
          tooltip.classList.toggle('opacity-100');
          tooltip.classList.toggle('pointer-events-none');
        });
      }
    });
    
    // Cerrar al hacer click fuera
    document.addEventListener('click', (e) => {
      const policyItems = document.querySelectorAll('[data-policy-item]');
      let isInside = false;
      
      policyItems.forEach(item => {
        if (item.contains(e.target)) {
          isInside = true;
        }
      });
      
      if (!isInside) {
        document.querySelectorAll('[data-tooltip]').forEach(t => {
          t.classList.remove('opacity-100');
          t.classList.add('opacity-0');
          t.classList.add('pointer-events-none');
        });
      }
    });
  });
</script>

