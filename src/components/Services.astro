<style>
  /* Vercel-inspired minimal animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }

  .service-card {
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .service-card:hover {
    background: rgba(255, 255, 255, 0.03);
    border-color: rgba(76, 214, 192, 0.4);
  }

  .stat-item {
    transition: transform 0.2s ease;
  }

  .stat-item:hover {
    transform: translateY(-2px);
  }

  /* Gradient text */
  .gradient-text {
    background: linear-gradient(135deg, #ffffff 0%, #a0a0a0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: inherit;
    -webkit-font-synthesis: weight;
    font-synthesis: weight;
  }

  .accent-gradient {
    background: linear-gradient(135deg, #4CD6C0 0%, #09b397 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: inherit;
    -webkit-font-synthesis: weight;
    font-synthesis: weight;
  }

  /* Mobile fix: Use solid colors instead of gradients to preserve font-weight */
  @media (max-width: 768px) {
    .gradient-text {
      -webkit-text-fill-color: currentColor;
      background: none;
      -webkit-background-clip: unset;
      background-clip: unset;
      color: #e5e5e5;
    }

    .accent-gradient {
      -webkit-text-fill-color: currentColor;
      background: none;
      -webkit-background-clip: unset;
      background-clip: unset;
      color: #4CD6C0;
    }
  }
</style>

