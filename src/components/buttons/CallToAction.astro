---

const {text} = Astro.props;
---


<div class="christmas-offer-wrapper">
  <a href="#pricing" class="button christmas-offer" role="button" aria-label="Ver Oferta de Navidad - Ir a precios">
    <span class="button-text">OFERTA NAVIDAD</span>
  </a>
</div>


<style>
  :root {
    --red: #ff1a1a;
    --red-dark: #cc0000;
    --text: white;
  }

  /* Contenedor principal con posicionamiento relativo */
  .christmas-offer-wrapper {
    position: relative;
    display: inline-flex;
    align-items: center;
  }

  .button {
    display: inline-block;
    text-decoration: none;
    font-size: 15px;
    padding: 0.7em 2.7em;
    letter-spacing: 0.06em;
    position: relative;
    font-family: inherit;
    border-radius: 0.6em;
    overflow: hidden; /* Contiene la nieve dentro del botón */
    transition: all 0.3s;
    line-height: 1.4em;
    border: 2px solid var(--red);
    background: linear-gradient(to right, rgba(255, 26, 26, 0.8) 1%, rgba(255, 26, 26, 0.6) 40%, rgba(255, 26, 26, 0.6) 60%, rgba(255, 26, 26, 0.8) 100%);
    color: var(--text);
    cursor: pointer;
    text-align: center;
    z-index: 1;
  }

  /* Wrapper para el texto con z-index alto */
  .button-text {
    position: relative;
    z-index: 10;
    display: inline-block;
  }

  .button:hover {
    color: #ffffff;
    border-color: #ff5252;
  }

  /* Efecto de brillo existente */
  .button:before {
    content: "";
    position: absolute;
    left: -4em;
    width: 4em;
    height: 100%;
    top: 0;
    transition: transform .4s ease-in-out;
    background: linear-gradient(to right, transparent 1%, rgba(255, 26, 26, 0.3) 40%, rgba(255, 26, 26, 0.3) 60%, transparent 100%);
    pointer-events: none;
    z-index: 5;
  }

  .button:hover:before {
    transform: translateX(15em);
  }

  /* ===== EFECTO DE NIEVE ESPECTACULAR ===== */

  /* Capa 1: Copos grandes y lentos (superior) */
  .christmas-offer::after {
    content: "";
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
    background-image:
      radial-gradient(circle, rgba(255, 255, 255, 0.9) 1.5px, transparent 1.5px),
      radial-gradient(circle, rgba(255, 255, 255, 0.8) 1px, transparent 1px),
      radial-gradient(circle, rgba(255, 255, 255, 0.7) 2px, transparent 2px);
    background-size:
      50px 50px,
      80px 80px,
      110px 110px;
    background-position:
      0px 0px,
      40px 60px,
      70px 30px;
    animation: snowfall-slow 12s linear infinite;
    opacity: 0.95;
  }

  /* Capa 2: Copos medianos (usando el texto wrapper como pseudo-elemento) */
  .button-text::before {
    content: "";
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: -1;
    background-image:
      radial-gradient(circle, rgba(255, 255, 255, 0.85) 1px, transparent 1px),
      radial-gradient(circle, rgba(230, 240, 255, 0.75) 1.5px, transparent 1.5px),
      radial-gradient(circle, rgba(255, 255, 255, 0.65) 0.8px, transparent 0.8px);
    background-size:
      60px 60px,
      90px 90px,
      45px 45px;
    background-position:
      20px 0px,
      50px 40px,
      10px 70px;
    animation: snowfall-medium 8s linear infinite;
    filter: blur(0.3px);
  }

  /* Capa 3: Copos pequeños y rápidos (usando el texto wrapper) */
  .button-text::after {
    content: "";
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: -1;
    background-image:
      radial-gradient(circle, rgba(255, 255, 255, 0.7) 0.8px, transparent 0.8px),
      radial-gradient(circle, rgba(240, 248, 255, 0.6) 1px, transparent 1px),
      radial-gradient(circle, rgba(255, 255, 255, 0.5) 0.5px, transparent 0.5px);
    background-size:
      35px 35px,
      55px 55px,
      25px 25px;
    background-position:
      15px 0px,
      35px 50px,
      5px 25px;
    animation: snowfall-fast 5s linear infinite;
    filter: blur(0.5px);
  }

  /* Animación lenta para copos grandes - ajustada para contenedor limitado */
  @keyframes snowfall-slow {
    0% {
      background-position: 0px -50px, 40px 10px, 70px -20px;
      opacity: 0;
    }
    10% {
      opacity: 0.95;
    }
    90% {
      opacity: 0.95;
    }
    100% {
      background-position: 15px 100px, 55px 160px, 85px 130px;
      opacity: 0;
    }
  }

  /* Animación media para copos medianos - ajustada para contenedor limitado */
  @keyframes snowfall-medium {
    0% {
      background-position: 20px -40px, 50px 0px, 10px 30px;
      opacity: 0;
    }
    10% {
      opacity: 0.85;
    }
    90% {
      opacity: 0.85;
    }
    100% {
      background-position: 10px 100px, 40px 140px, 0px 160px;
      opacity: 0;
    }
  }

  /* Animación rápida para copos pequeños - ajustada para contenedor limitado */
  @keyframes snowfall-fast {
    0% {
      background-position: 15px -30px, 35px 20px, 5px -5px;
      opacity: 0;
    }
    15% {
      opacity: 0.7;
    }
    85% {
      opacity: 0.7;
    }
    100% {
      background-position: 23px 80px, 43px 120px, 13px 95px;
      opacity: 0;
    }
  }

  /* Efecto de resplandor sutil al pasar el mouse */
  .christmas-offer:hover::after {
    animation-duration: 10s;
    opacity: 1;
  }

  .christmas-offer:hover .button-text::before {
    animation-duration: 6s;
  }

  .christmas-offer:hover .button-text::after {
    animation-duration: 4s;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .button {
      font-size: 11px;
      padding: 0.5em 0.8em;
      letter-spacing: 0.02em;
      border-radius: 0.5em;
    }

    /* Ajustar intensidad de nieve en móviles para mejor rendimiento */
    .christmas-offer::after,
    .button-text::before,
    .button-text::after {
      opacity: 0.7;
    }
  }

  @media (min-width: 640px) and (max-width: 768px) {
    .button {
      font-size: 13px;
      padding: 0.6em 1.2em;
    }
  }
</style>
