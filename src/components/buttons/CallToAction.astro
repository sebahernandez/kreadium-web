const {text} = Astro.props;
---


<button onclick="window.location.href='#contact'" class="button">
  COTIZAR GRATIS
</button>


<style>
      .button {
    --teal: #22d3ee;
    font-size: 15px;
    padding: 0.7em 2.7em;
    letter-spacing: 0.06em;
    position: relative;
    font-family: inherit;
    border-radius: 0.6em;
    overflow: hidden;
    transition: all 0.3s;
    line-height: 1.4em;
    border: 2px solid var(--teal);
    background: linear-gradient(to right, rgba(34, 211, 238, 0.1) 1%, transparent 40%, transparent 60%, rgba(34, 211, 238, 0.1) 100%);
    color: var(--teal);
    box-shadow: inset 0 0 10px rgba(34, 211, 238, 0.4), 0 0 9px 3px rgba(34, 211, 238, 0.1);
    }

    .button:hover {
    color: #06b6d4;
    box-shadow: inset 0 0 10px rgba(34, 211, 238, 0.6), 0 0 9px 3px rgba(34, 211, 238, 0.2);
    }

    .button:before {
    content: "";
    position: absolute;
    left: -4em;
    width: 4em;
    height: 100%;
    top: 0;
    transition: transform .4s ease-in-out;
    background: linear-gradient(to right, transparent 1%, rgba(34, 211, 238, 0.1) 40%, rgba(34, 211, 238, 0.1) 60%, transparent 100%);
    pointer-events: none;
    }

    .button:hover:before {
    transform: translateX(15em);
    }

    @media (max-width: 768px) {
    .button {
        font-size: 14px;
        padding: 0.6em 0.5em;
    }
  }
</style>
