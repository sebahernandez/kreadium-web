---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ServicesItems from '../components/ServicesItems.astro';
import Testimonials from '../components/Testimonials.astro';
import Pricing from '../components/Pricing.astro';
import ContactForm from '../components/contact-form/ContactForm';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import ScrollVelocity from '../components/scroll-velocity/ScrollVelocity';
import DarkVeil from '../components/dark-veil/DarkVeil';
import Shopify from '../components/Shopify.astro';
import Integrations from '../components/Integrations.astro';
import Galaxy from '../components/galaxy/Galaxy';
import Wordpress from '../components/Wordpress.astro';
import SpeedInsights  from "@vercel/speed-insights/astro"
import Analytics from '@vercel/analytics/astro'
---

<Layout title="Kreadium | Desarrollo Web Profesional en Chile - WordPress & Shopify">
	<Header />

	<!-- Vista desktop: Galaxy Hero -->
	<div class="hidden md:block relative w-full md:h-[400px] lg:h-[600px] h-[400px] overflow-hidden" id="galaxy-container">
		<!-- Layer 1 (bottom): Galaxy background -->
		<!-- <div class="absolute inset-0 z-0">
			<Galaxy client:only
			mouseInteraction={false}
			density={0.5}
			saturation={0.5}
			glowIntensity={0.3}
			autoCenterRepulsion={3}
			hueShift={40}
			/>
		</div> -->

		<!-- Layer 2 (middle): DarkVeil effect overlay -->
		<DarkVeil client:only
		hueShift={54}
		noiseIntensity={0.15}
		scanlineIntensity={0.3}
		speed={0.5}
		scanlineFrequency={60}
		warpAmount={0.08}
		resolutionScale={1}
		/>

		<!-- Layer 3 (top): Hero content -->
		<div class="absolute inset-0 z-10">
			<Hero />
		</div>

		<!-- Layer 4 (top-most): Overlay gradient fade to black -->
		<div class="absolute inset-0 pointer-events-none bg-gradient-to-b from-transparent via-transparent to-black/100 z-20"></div>
	</div>   
	<!-- Vista mobile: Hero sin Galaxy -->
	<div class="block md:hidden relative w-full md:h-[400px] lg:h-[600px] h-[400px] overflow-hidden bg-gradient-to-b from-gray-900 via-slate-800 to-black" id="galaxy-container">
		 <Hero />
		<div class="absolute inset-0 pointer-events-none bg-gradient-to-b from-transparent via-transparent to-black/100"></div>
	</div>   
		<ServicesItems />

		<Wordpress />
		
		<div class="py-0 md:py-[100px]">
			<ScrollVelocity
				client:only
				texts={['NAVIDAD 2025', 'NAVIDAD 2025']} 
				velocity={100}
				className="custom-scroll-text gap-spacing-40"
			/>
		</div>
	<!-- 	
		<ServiceSelector /> -->
		<Shopify />
		<Integrations />
		
		<Testimonials />
	<Pricing />
	<ContactForm client:only/> 
	<Footer />
    <SpeedInsights />
	<Analytics />
</Layout>
