---
import Layout from '../layouts/Layout.astro';
import Pricing from '../components/Pricing.astro';
import ContactForm from '../components/contact-form/ContactForm';
import Breadcrumb from '../components/Breadcrumb.astro';
import SpeedInsights from "@vercel/speed-insights/astro"
import Analytics from '@vercel/analytics/astro'
---

<style>
	.section-divider-gradient {
		position: relative;
		padding: 0;
		margin: 0;
		min-height: 1px;
		contain: layout style paint;
	}

	.section-divider-gradient::before {
		content: '';
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%) translateZ(0);
		width: 100%;
		max-width: 1400px;
		height: 1px;
		background: linear-gradient(
			90deg,
			transparent 0%,
			rgba(76, 214, 192, 0.1) 15%,
			rgba(76, 214, 192, 0.2) 50%,
			rgba(76, 214, 192, 0.1) 85%,
			transparent 100%
		);
		will-change: auto;
	}

	.section-divider-border {
		border-top: 1px solid rgba(255, 255, 255, 0.03);
		box-shadow:
			0 1px 0 rgba(76, 214, 192, 0.05),
			0 -1px 40px rgba(76, 214, 192, 0.02);
		min-height: 1px;
		contain: layout style paint;
	}

	.section-divider-bg-shift {
		background: linear-gradient(
			to bottom,
			transparent 0%,
			rgba(76, 214, 192, 0.008) 50%,
			transparent 100%
		);
		padding: 80px 0;
		contain: layout style;
	}

	.section-divider-glow {
		position: relative;
		padding-top: 1px;
		min-height: 120px;
		contain: layout style paint;
	}

	.section-divider-glow::before {
		content: '';
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%) translateZ(0);
		width: 100%;
		max-width: 800px;
		height: 120px;
		background: radial-gradient(
			ellipse at top,
			rgba(76, 214, 192, 0.08) 0%,
			rgba(76, 214, 192, 0.03) 30%,
			transparent 70%
		);
		pointer-events: none;
		will-change: auto;
	}

	.page-hero {
		position: relative;
		padding: 140px 0 80px;
		background: linear-gradient(to bottom, rgba(76, 214, 192, 0.05) 0%, transparent 100%);
	}

	@media (max-width: 768px) {
		.page-hero {
			padding: 120px 0 60px;
		}
	}

	.page-hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 600px;
		height: 400px;
		background: radial-gradient(
			ellipse at center,
			rgba(76, 214, 192, 0.15) 0%,
			transparent 70%
		);
		pointer-events: none;
	}
</style>

<Layout
